{
  "$schema": "../toolchain/schemas/make.schema.json",
  "info": {
    "name": "WailaPE",
    "description": "",
    "author": "DDCompany",
    "version": "v6-release",
    "icon": "mod_icon.png"
  },
  "api": "CoreEngine",
  "resources": [
    {
      "path": "assets/gui",
      "type": "gui"
    }
  ],
  "sources": [
    {
      "source": "dev",
      "target": "main.js",
      "type": "main",
      "language": "typescript"
    },
    {
      "source": "launcher.js",
      "type": "launcher",
      "language": "javascript"
    },
    {
      "source": "lib/*",
      "type": "library",
      "language": "javascript"
    }
  ],
  "additional": [
    {
      "source": "assets/styles/*",
      "targetDir": "./styles"
    },
    {
      "source": "assets/config/*",
      "targetDir": "."
    }
  ]
}